.modal.ng-cloak(ng-controller='loadModalCtrl')#load_modal
  .modal-dialog(ng-click='$event.stopPropagation()')
    .modal-content
      .modal-header
        button.close(type='button' ng-click='$parent.$parent.$parent.modalTemplate = false') Ã—
        h3.modal-title Load
      .modal-body
        div(ng-if="noSheets").alert.alert-info There are no saves
        .spritesheet(
          ng-repeat='(id, spritesheet) in spritesheets'
        )
          img(ng-src='{{spritesheet.image}}').img-thumbnail
          .sprites
            div(ng-repeat="sprite in spritesheet.sprites").sprite {{sprite.name}}

          .button_wrapper(ng-hide='removeConfirmation')
            button(
              type='button'
              ng-click='removeConfirmation = true'
            ).btn.btn-xs.btn-danger
              span.glyphicon.glyphicon-trash
            button.btn.btn-xs.btn-info(type='button' ng-click='load(spritesheet.id)') Load
          .button_wrapper(ng-show='removeConfirmation')
            button(
              type='button'
              ng-click='removeConfirmation = false'
            ).btn.btn-xs.btn-danger
              span.glyphicon.glyphicon-remove
            button(
              type='button'
              ng-click='delete(spritesheet.id)'
            ).btn.btn-xs.btn-success
              span.glyphicon.glyphicon-ok


      .modal-footer
        button.btn.btn-default(type='button' ng-click='$parent.$parent.$parent.modalTemplate = false') Close
