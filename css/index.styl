// vars
blue = #28a6e4
blue_lightest = lighten(blue, 75%)
blue_lighter = lighten(blue, 50%)
blue_light = lighten(blue, 25%)
blue_dark  = darken(blue, 25%)
blue_darker  = darken(blue, 50%)
blue_darkest  = darken(blue, 75%)

orange = #fd9b1f
orange_lightest = lighten(orange, 75%)
orange_lighter = lighten(orange, 50%)
orange_light = lighten(orange, 25%)
orange_dark  = darken(orange, 25%)
orange_darker  = darken(orange, 50%)
orange_darkest  = darken(orange, 75%)

green = #95da16
green_lightest = lighten(green, 75%)
green_lighter = lighten(green, 50%)
green_light = lighten(green, 25%)
green_dark  = darken(green, 25%)
green_darker  = darken(green, 50%)
green_darkest  = darken(green, 75%)

grey = #6b6760
grey_lightest = lighten(grey, 75%)
grey_lighter = lighten(grey, 50%)
grey_light = lighten(grey, 25%)
grey_dark  = darken(grey, 25%)
grey_darker  = darken(grey, 50%)
grey_darkest  = darken(grey, 75%)



list_item_gap = 0px

input_style
  color blue
// end vars

// util
.caret.caret-reversed
  border-top-width 0
  border-bottom 4px solid #000000
// end util

body
  margin 0
  padding-top 20px

canvas
  cursor crosshair

input[type=file]
  width 100%

.offscreen_hide
  position absolute
  margin 0
  padding 0
  top -100000px

.input-group
  padding-top 10px

.container
  width 768px!important
  margin 0 auto
  // border 1px solid red

#navigator_wrapper
  margin-right 0
  padding-right 0

#form
  margin 0
  padding 0

#imagedata
  @extend input_style
  border-top-right-radius 0
  border-bottom-right-radius 0

#filepath
  @extend input_style

#output
  resize none
  height 165px

list_item
  cursor pointer
  padding 3px
list_caret
  &::before
    margin-left -5px
    margin-right 5px
  &:not(.open)::before
    display inline-block
    border-right 7px solid transparent
    border-bottom 7px solid white
    border-left 7px solid transparent
    border-bottom-color white
    content ''
  &.open::before
    display inline-block
    border-right 7px solid transparent
    border-top 7px solid white
    border-left 7px solid transparent
    border-top-color white
    content ''

#list_wrapper
  margin-left 0
  height 457px
  border 1px solid grey_light
  border-radius 4px
  padding-left 0
  padding-right 0
  overflow hidden
  #list
    overflow-y scroll
    color white
    height 420px
  #add_sprite
    height 40px
    width 100%
    margin 0
    margin-top list_item_gap
    border-radius 0!important
    border none

  .button_wrapper
    clear both
    display inline
  button[type=button]
    float right
    margin 1.5px
    margin-top 15px
  input[type=text]
    width 110px
    border none
    cursor pointer
    display inline-block
    color white
    &:focus
      background white!important
      cursor text

  .sprite
    margin-top list_item_gap
  .sprite:first-of-type
    margin-top 0

  .sprite_header
    @extend list_caret
    @extend list_item
    padding-left: 10px
    background orange
    input[type=text]
      background orange_dark
      &:focus
        color orange_dark
    &.open
      background orange
    img
      margin 5px 10px


  .action_header
    @extend list_caret
    @extend list_item
    padding-left: 30px
    background orange_light
    input[type=text]
      background orange_dark
      &:focus
        color orange_dark
    &.open
      background orange_light
    img
      margin 5px 10px


  .frame_header
    @extend list_item
    padding-left: 40px
    background orange_lighter
    &.selected
      background green_lightest


// modals
.modal
  display block!important

#options_modal
  .fixed-width
    width 80px
    display inline-block
#load_modal
  .spritesheet
    cursor pointer
    border-radius 5px

    img
      display inline-block
      margin 5px 5px
      height 100px
      border-width 2px
      vertical-align top
    .sprites
      display inline-block
      width 60%
      margin-top 5px
      .sprite
        display inline-block
        padding 8px 10px
        margin 2px
        border-radius 3px
        background-color grey_light
        color white

    .button_wrapper
      clear both
      display inline
    button[type=button]
      float right
      margin-right 15px
      margin-top 42px
    &:not(:hover)
      button[type=button]
        background-color grey_lighter
        border-color grey_light


    &:hover
      background-color orange_lightest
      color orange_dark
      .sprite
        background-color orange_light
        color white
      img
        border-color orange_light
    &.selected
      background-color orange_lighter
      color orange_darker
      .sprite
        background-color orange
        color white
      img
        border-color orange

#footer
  font-size 0.8em
  color grey

.modal-backdrop
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0,0,0,0.5)!important


// ngCloak
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
  display none !important